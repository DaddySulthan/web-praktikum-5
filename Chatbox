<!DOCTYPE html>
<html>
<head>
	<title>Chat Disini</title>
</head>
<body>
	<div id="isichat">
		
	</div>
	<form method="REQUEST">
		<input id="pesan" style="width: 50%" type="text" name="pesan">
		<button onclick="return kirim();">KIRIM PESAN DISINI</button>
	</form>
	
</body>
<script type="text/javascript">
	function kirim() {
		pesan = document.getElementById("pesan").value;
		document.getElementById("isichat").innerHTML = pesan+'\n';
		
		return false;
	}
</script>
</html>
